{
  "name": "cook-mate",
  "version": "1.0.0",
  "description": "A full-stack mobile cooking companion app with Expo React Native and NestJS",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run mobile:start\" \"npm run backend:dev\"",
    "mobile:start": "cd mobile && npm start",
    "mobile:android": "cd mobile && npm run android",
    "mobile:ios": "cd mobile && npm run ios",
    "mobile:web": "cd mobile && npm run web",
    "mobile:install": "cd mobile && npm install",
    "backend:dev": "cd backend && npm run start:dev",
    "backend:start": "cd backend && npm start",
    "backend:build": "cd backend && npm run build",
    "backend:install": "cd backend && npm install",
    "install:all": "npm install && npm run mobile:install && npm run backend:install",
    "clean": "rm -rf node_modules mobile/node_modules backend/node_modules",
    "clean:install": "npm run clean && npm run install:all"
  },
  "keywords": [
    "expo",
    "react-native",
    "nestjs",
    "typescript",
    "mobile",
    "cooking",
    "full-stack"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "workspaces": [
    "mobile",
    "backend"
  ]
} 